          },
          {
            "id": "fanGradientSoft",
            "type": "linearGradient",
            "attrs": { "x1": "0%", "y1": "100%", "x2": "100%", "y2": "0%" },
            "stops": [
              { "offset": "0%", "color": "tokens.colors.fan.yellow", "opacity": 0.55 },
              { "offset": "40%", "color": "tokens.colors.fan.pink", "opacity": 0.5 },
              { "offset": "100%", "color": "tokens.colors.fan.blue2", "opacity": 0.6 }
