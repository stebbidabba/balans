{
    "meta": {
      "name": "About / Our Mission",
      "component": "AboutSection",
      "framework": "nextjs",
      "css": "tailwind",
      "fonts": { "primary": "Work Sans" }
    },
  
    "tokens": {
      "colors": {
        "bg.primary": "var(--bg-start, #0B2240)",        
        "bg.secondary": "var(--bg-end, #0E2C57)",         
        "text.primary": "rgba(255,255,255,0.95)",
        "text.muted": "rgba(255,255,255,0.82)",
        "fan.pink": "#FF9BD5",
        "fan.yellow": "#FFE37A",
        "fan.blue1": "#1F7BFF",
        "fan.blue2": "#5FB0FF",
        "fan.stroke": "rgba(255,255,255,0.35)"
